<Page x:Class="PcClub.Pages.NewEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PcClub.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewEventPage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Заголовок страницы -->
            
            <StackPanel>
                <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" Margin="0,20">Новое событие</TextBlock>
            <!-- Поля для ввода данных -->
            <Label FontSize="30" Content="Наименование:" Grid.Row="1"/>
            <TextBox FontSize="30" x:Name="txtName" Grid.Row="1" />

                <Label Content="Описание:" Grid.Row="2"  FontSize="30" />
                <TextBox x:Name="txtDescription" Grid.Row="2" FontSize="30" />

                <Label Content="Дата:" Grid.Row="3" FontSize="30"/>
                <DatePicker x:Name="dpDate" Grid.Row="3" FontSize="30" />

                <Label Content="Max пользователей:" Grid.Row="4" FontSize="30" />
                <TextBox x:Name="txtMaxUsers" Grid.Row="4" FontSize="30" />
            </StackPanel>
            <!-- Кнопка сохранения события -->
            <Button Content="Сохранить" Grid.Row="5" FontSize="30" HorizontalAlignment="Center" Margin="10" Click="Save_Click" />
                
        </Grid>
    </Grid>
</Page>
