<Window x:Class="PcClub.Pages.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PcClub.Pages"
                WindowStartupLocation="CenterOwner"

        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="200" Width="410">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pc.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Frame Grid.Column="1" Background="#9DFFFFFF"/>
        <StackPanel>
            <TextBlock  FontSize="30" Text="Введите код подтверждения:"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="20">
                <TextBox x:Name="txtConfirmationCode" FontSize="30" />
            </Border>
            <Button Content="Проверить"  Click="btnConfirm_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
